@model TaskDetailsViewModel

<h3>Change Details Of Your Task</h3><br>
@using (Html.BeginForm("Details", "Task", FormMethod.Post))
{
    @Html.Hidden($"Model.Id", Model.Id, new { Model.Id })
    @Html.Hidden($"Model.UserId", Model.UserId, new { Model.UserId })
    <div class="row">
        <div class="col-md-12 cols">
            @Html.Label(expression: "Model.Title"):
            @Html.TextBox($"Model.Title", Model.Title, new { Model.Title })
        </div>
        <div class="col-md-12 cols">
            @Html.Label(expression: "Model.Description"):
            @Html.TextBox($"Model.Descripton", Model.Descripton, new { Model.Descripton })
        </div>
        <div class="col-md-12 cols">
            @Html.Label(expression: "Model.Importance"):
            @Html.DropDownList($"Model.Importance", Html.GetEnumSelectList(Model.Importance.GetType()), new { Model.Importance, @class = "dropdown-toggle btn btn-info" })
        </div>
        <div class="col-md-12 cols">
            @Html.Label(expression: "Model.Type"):
            @Html.DropDownList($"Model.Type", Html.GetEnumSelectList(Model.Type.GetType()), new { Model.Type, @class = "dropdown-toggle btn btn btn-info" })
        </div>
        <div class="col-md-12 cols">
            @Html.Label(expression: "Model.Status"):
            @Html.DropDownList($"Model.Status", Html.GetEnumSelectList(Model.Status.GetType()), new { Model.Status, @class = "dropdown-toggle btn btn-info" })
        </div>
        <div class="col-md-12">
            <button class="btn btn-success" type="submit"> Submit Changes</button>
        </div>
    </div>

}
<h3>SubTasks:</h3>

@foreach (var subtask in Model.SubTasks)
{
    <div class="row" style=" border:2px solid black">
        <div class="col-md-2">
            @Html.Label($"subtask.Title"):
            @Html.Value(null, subtask.Title)
        </div>
        <div class="col-md-2">
            @Html.Label($"subtask.Description"):
            @Html.Value(null, subtask.Description)
        </div>
        <div class="col-md-2">
            @Html.Label($"subtask.Status"):
            @Html.Value(null, subtask.Status.ToString())
        </div>
    </div>
}